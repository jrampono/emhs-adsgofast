@using Humanizer;
@model WebApplication.Models.SourceAndTargetSystems

@{
    ViewData["Title"] = "Details - " + "SourceAndTargetSystems".Humanize(LetterCasing.Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div class="alert alert-danger" role="alert">Caution. These records are critical to the application and changes may cause certain features to break.</div>    

<h1>Details</h1>

<div>
    <h4> @("SourceAndTargetSystems".Humanize(LetterCasing.Title))</h4>
    <hr />
    <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemName)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemType)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemType)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemDescription)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemDescription)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemServer)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemServer)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemAuthType)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemAuthType)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemUserName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemUserName)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemSecretName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemSecretName)
                </dd>               
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemKeyVaultBaseUrl)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SystemKeyVaultBaseUrl)
                </dd>               
             <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SystemJson)
            </dt>
            <dd class = "col-sm-10 jsonpretty">
                <a class="jsonraw">@Html.DisplayFor(model => model.SystemJson)</a>
                <div class="jsonformatted"></div>
            </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ActiveYn)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ActiveYn)
                </dd>               
    </dl>
</div>
<div>
    <a href="javascript:history.go(-1)" title="Back to List" class="btn btn-secondary"><i class="fa fa-arrow-circle-left"></i> Back</a>
    <a asp-action="Edit" asp-route-id="@Model.SystemId" class="btn btn-warning details" title="Edit"><i class="fa fa-pencil-square-o"></i> Edit</a> 
</div>
@section Scripts
{
    <script type="text/javascript">
		$(document).ready(function ()
        {
            $(".jsonpretty").each(function (index) {
                $(".jsonformatted", this).JSONView($(".jsonraw", this)[0].innerText);
                $(".jsonraw", this)[0].innerText = null;
            });

		});
    </script>
}   
