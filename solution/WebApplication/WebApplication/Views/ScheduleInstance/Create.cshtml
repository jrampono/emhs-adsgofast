@using Humanizer;
@model WebApplication.Models.ScheduleInstance

@{
    ViewData["Title"] = "Create - " + "ScheduleInstance".Humanize(LetterCasing.Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4> @("ScheduleInstance".Humanize(LetterCasing.Title))</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScheduleMasterId" class="control-label"></label>
                <select asp-for="ScheduleMasterId" class ="form-control" asp-items="ViewBag.ScheduleMasterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledDateUtc" class="control-label"></label>
                <input asp-for="ScheduledDateUtc" class="form-control" />
                <span asp-validation-for="ScheduledDateUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledDateTimeOffset" class="control-label"></label>
                <input asp-for="ScheduledDateTimeOffset" class="form-control" />
                <span asp-validation-for="ScheduledDateTimeOffset" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ActiveYn" /> @Html.DisplayNameFor(model => model.ActiveYn)
                </label>
            </div>

            <div class="form-group">
                <a href="javascript:history.go(-1)" title="Back to List" class="btn btn-secondary" ><i class="fa fa-arrow-circle-left"></i> Back</a>            
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


