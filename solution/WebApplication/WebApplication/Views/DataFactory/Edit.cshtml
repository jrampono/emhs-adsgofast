@using Humanizer; 
@model WebApplication.Models.DataFactory

@{
    ViewData["Title"] = "Edit - " + "DataFactory".Humanize(LetterCasing.Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div class="alert alert-danger" role="alert">Caution. These records are critical to the application and changes may cause certain features to break.</div>    

<h1>Edit</h1>

<h4> @("DataFactory".Humanize(LetterCasing.Title))</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceGroup" class="control-label"></label>
                <input asp-for="ResourceGroup" class="form-control" />
                <span asp-validation-for="ResourceGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionUid" class="control-label"></label>
                <input asp-for="SubscriptionUid" class="form-control" />
                <span asp-validation-for="SubscriptionUid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultKeyVaultUrl" class="control-label"></label>
                <input asp-for="DefaultKeyVaultUrl" class="form-control" />
                <span asp-validation-for="DefaultKeyVaultUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogAnalyticsWorkspaceId" class="control-label"></label>
                <input asp-for="LogAnalyticsWorkspaceId" class="form-control" />
                <span asp-validation-for="LogAnalyticsWorkspaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="javascript:history.go(-1)" title="Back to List" class="btn btn-secondary" ><i class="fa fa-arrow-circle-left"></i> Back</a>            
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>


